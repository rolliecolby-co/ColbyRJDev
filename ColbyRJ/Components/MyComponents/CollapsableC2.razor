@rendermode InteractiveServer

<div>
    <div class="collapsable">
        <div class="title" @onclick="Toggle">
            @if (Collapsed)
            {
                <ChevronRightC />
            }
            else
            {
                <ChevronDownC />
            }
            <span class="ps-2 pe-5">
                @Title
            </span>
        </div>
    </div>

    @if (!Collapsed)
    {
        <div class="collapsable-panel">
             @((MarkupString)@ChildContent)
        </div>
    }
</div>

@code {

    [Parameter] public string ChildContent { get; set; } = string.Empty;
    [Parameter] public bool Collapsed { get; set; } = true;
    [Parameter] public string Title { get; set; } = string.Empty;
    bool showContent = false;
    string divClicked = "";
    string divActive = "";

    public void Toggle()
    {
        Collapsed = !Collapsed;
    }
}

<style>
    .collapsable {
        border: 1px solid blue;
        border-radius: 10px;
        padding: 5px 10px;
        background-color: lightgreen;
        margin-top: 10px;
    }

    .collapsable-panel {
        padding: 5px 10px;
        background-color: white;
        margin-left: 10px;
    }

    .collapsable .title {
        display: table-cell;
        cursor: pointer;
    }
</style>
