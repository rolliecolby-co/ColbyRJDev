@page "/gallerySection/edit/{sectionId:int}"
@rendermode InteractiveServer

@layout AdminLayout

@inject IHttpContextAccessor httpContext
@inject IGalleryRepository galleryRepository
@inject NavigationManager navManager
@attribute [Authorize(Roles = "Admin")]

<div class="row">
    <div class="col-4">
        <HeadingC Text="Update Gallery Section" />

        <EditForm Model="@Section" OnValidSubmit="UpdateSection">
            <DataAnnotationsValidator />

            <div class="row mt-3">
                <div class="col">
                    <div class="form-group">
                        <label>Section</label>
                        <div>
                            <InputText @bind-Value="@Section.Section" class="form-control" />
                            <ValidationMessage For="() => Section.Section"></ValidationMessage>
                        </div>
                    </div>

                    <div class="form-group mt-2">
                        <label>Order By</label>
                        <div>
                            <InputNumber @bind-Value="@Section.OrderBy" class="form-control" />
                            <ValidationMessage For="() => Section.OrderBy"></ValidationMessage>
                        </div>
                    </div>
                    <div class="mt-3 text-center">
                        <button type="submit" class="btnUpdate">
                            Update Section
                        </button>
                        <a href="gallerySections" class="btnReturn ms-3">Return</a>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter] public int SectionId { get; set; }
    GallerySectionDTO Section = new GallerySectionDTO();

    protected override async Task OnParametersSetAsync()
    {
        var tSection = await galleryRepository.GetSection(SectionId);
        Section = tSection;
    }

    private async Task UpdateSection()
    {
        var addResult = await galleryRepository.UpdateSection(Section);
        navManager.NavigateTo("gallerySections");
    }

}
