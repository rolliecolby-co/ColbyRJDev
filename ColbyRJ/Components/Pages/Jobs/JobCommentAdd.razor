@page "/jobComment/add/{JobId:int}"
@rendermode InteractiveServer

@layout ViewLayout

@inject IJobRepository jobRepository
@inject IJobCommentRepository jobCommentRepository
@inject NavigationManager navManager
@attribute [Authorize]

<div class="row">
    <div class="col"></div>
    <div class="col-6">
        <HeadingC Text="Add Job Comment" />

        <div class="row mt-2">
            <div class="col-4 pt-2 text-center">
                Owner / Employer / Position
            </div>
            <div class="col">
                <SubHeadingC Text="@jobStr" />
            </div>
        </div>

        <EditForm Model="Comment" OnValidSubmit="AddComment">
            <DataAnnotationsValidator />

            <div class="row mt-2">
                <div class="col">
                    <div class="form-group">
                        <label><b>Your Comment</b></label>
                        <RZHtmlEditorMinC @bind-HtmlValue="@Comment.Comments" Height="500px" />
                        <ValidationMessage For="@(() => Comment.Comments)" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group text-center mt-5">
                        <button class="btnAdd">Add Comment</button>
                        <br /><br />
                        <a href="jobBrowse/@Job.Id" class="btnReturn">Return</a>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
    <div class="col"></div>
</div>
@code {
    [Parameter] public int JobId { get; set; }
    private JobDTO Job { get; set; } = new JobDTO();
    private JobCommentDTO Comment { get; set; } = new JobCommentDTO();
    string jobStr = "";

    protected override async Task OnParametersSetAsync()
    {
        var job = await jobRepository.GetJob(JobId);
        Job = job;
        jobStr = Job.Owner + " / " + Job.Employer + " / " + Job.Position;
        Comment.JobHistoryId = JobId;
    }

    private async Task AddComment()
    {
        var newCommentResult = await jobCommentRepository.Create(Comment);
        navManager.NavigateTo($"job/{Job.Id}");
    }
}
