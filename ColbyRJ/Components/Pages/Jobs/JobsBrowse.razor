@page "/browseJobs"
@rendermode InteractiveServer

@layout BrowseLayout

@inject IJobRepository jobRepository

@inject NavigationManager navManager
@attribute [Authorize]

<div class="row ">
    <div class="col-8 mb-2 ">
        <HeadingC Text="Jobs" />
    </div>
    <div class="col mb-2 ">
        @if (who != null && who.Count > 0)
        {
            <select value="@selectedWho" class="form-select" @onchange="OnWhoChanged">
                <option value="">-- Select For Whom --</option>
                @foreach (var item in who)
                {
                    <option value="@item">@item</option>
                }
            </select>
        }
    </div>
</div>

@if (jobs != null && jobs.Count > 0)
{
    <div class="row ">
        <div class="col mt-2">
            <RadzenDataGrid PageSize="15" AllowPaging="true" Data="@jobs" TItem="JobDTO"
                            PagerHorizontalAlign="HorizontalAlign.Center">
                <Columns>
                    <RadzenDataGridColumn Property="YearMonth" Title="Year Month" Width="110px"
                                          HeaderCssClass="rz-background-color-info-lighter" />
                    <RadzenDataGridColumn Property="Employer" Title="Employer" HeaderCssClass="rz-background-color-info-lighter" />
                    <RadzenDataGridColumn Property="Position" Title="Position" HeaderCssClass="rz-background-color-info-lighter" />
                    <RadzenDataGridColumn Property="WithRemarks" Title="With Remarks" Width="110px" TextAlign="TextAlign.Center"
                                          HeaderCssClass="rz-background-color-info-lighter" />
                    <RadzenDataGridColumn Property="CommentCount" Title="Comment Count" Width="110px" TextAlign="TextAlign.Center"
                                          HeaderCssClass="rz-background-color-info-lighter" />
                    <RadzenDataGridColumn Property="Id" Width="80px" TextAlign="TextAlign.Center"
                                          HeaderCssClass="rz-background-color-info-lighter">
                        <Template Context="data">
                            @{
                                var link = "job/" + data.Id;
                            }
                            <RadzenLink Path=@link Text="View" Target="_job" />
                        </Template>
                    </RadzenDataGridColumn>
                </Columns>
            </RadzenDataGrid>
        </div>
    </div>
}


@code {
    private List<JobDTO> jobs;
    private List<JobDTO> allJobs;
    private List<string> who;
    string selectedWho = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadJobs();

        var tWho = allJobs.OrderBy(q => q.Who).Select(q => q.Who).ToList();
        who = tWho.AsQueryable().Distinct().ToList();
    }

    private async Task LoadJobs()
    {
        var tJobs = await jobRepository.GetBrowseJobs();
        allJobs = tJobs.ToList();
    }

    private void OnWhoChanged(ChangeEventArgs e)
    {
        selectedWho = e.Value.ToString();

        jobs = allJobs.Where(q => q.Who == selectedWho).ToList();
        StateHasChanged();
    }
}
