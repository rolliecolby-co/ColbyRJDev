@page "/snippetComment/add/{SnippetId:int}"
@rendermode InteractiveServer

@layout ViewLayout

@inject ISnippetRepository snippetRepository
@inject ISnippetCommentRepository snippetCommentRepository
@inject NavigationManager navManager
@attribute [Authorize]

<div class="row">
    <div class="col"></div>
    <div class="col-6">
        <HeadingC Text="Add Snippet Comment" />

        <div class="row mt-2">
            <div class="col-4 pt-2 text-center">
                Grouped By / Snippet
            </div>
            <div class="col">
                <SubHeadingC Text="@snippetStr" />
            </div>
        </div>

        <EditForm Model="Comment" OnValidSubmit="AddComment">
            <DataAnnotationsValidator />

            <div class="row mt-2">
                <div class="col">
                    <div class="form-group">
                        <label><b>Your Comment</b></label>
                        <RZHtmlEditorMinC @bind-HtmlValue="@Comment.Comments" Height="500px" />
                        <ValidationMessage For="@(() => Comment.Comments)" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group text-center mt-5">
                        <button class="btnAdd">Add Comment</button>
                        <br /><br />
                        <a href="snippet/@Snippet.Key" class="btnReturn">Return</a>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
    <div class="col"></div>
</div>
@code {
    [Parameter] public int SnippetId { get; set; }
    private SnippetDTO Snippet { get; set; } = new SnippetDTO();
    private SnippetCommentDTO Comment { get; set; } = new SnippetCommentDTO();
    string snippetStr = "";

    protected override async Task OnParametersSetAsync()
    {
        var snippet = await snippetRepository.GetSnippet(SnippetId);
        Snippet = snippet;
        snippetStr = Snippet.GroupedBy + " / " + Snippet.Title;
        Comment.SnippetId = SnippetId;
    }

    private async Task AddComment()
    {
        var newCommentResult = await snippetCommentRepository.Create(Comment);
        navManager.NavigateTo($"snippet/{@Snippet.Key}");
    }
}
