@page "/photoAlbumPhoto/edit/{PhotoId:int}"
@rendermode InteractiveServer

@layout PostEditLayout

@inject IPhotoAlbumPhotoRepository photoAlbumPhotoRepository
@inject NavigationManager navManager
@attribute [Authorize]

<div class="row">
    <div class="col"></div>
    <div class="col-8">
        <HeadingC Text="Edit PhotoAlbum Photo" />

        @if (Photo != null && Photo.PhotoAlbum != null)
        {
            <div class="row mt-2">
                <div class="col-4 pt-2 text-center">
                    Grouped By / Photo Album
                </div>
                <div class="col">
                    <SubHeadingC Text="@photoAlbumStr" />
                </div>
            </div>
        }

        <EditForm Model="Photo" OnValidSubmit="UpdatePhoto">
            <DataAnnotationsValidator />

            <div class="row mt-2">
                <div class="col-5">
                    <div class="form-group">
                        <label><b>Caption</b></label>
                        <InputText @bind-Value="Photo.Caption" class="form-control"></InputText>
                    </div>
                    <div class="form-group">
                        <label>Order Number</label>
                        <InputNumber @bind-Value="Photo.OrderBy" class="form-control"></InputNumber>
                    </div>
                    <div class="form-group mt-2">
                        <label>Photo Date</label>
                        <InputDate @bind-Value="Photo.PhotoDate" class="form-control"></InputDate>
                    </div>
                    <div class="form-group text-center mt-3">
                        <button class="btnSave">Save</button>
                        <a href="photoAlbumPhotos/@Photo.PhotoAlbumId" class="btnReturn">Return</a>
                    </div>
                </div>
                <div class="col">
                    <div class="photo-edit">
                        <img src="@Photo.PhotoUrl" class="img-fluid" />
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
    <div class="col"></div>
</div>

@code {
    [Parameter] public int PhotoId { get; set; }
    private PhotoAlbumPhotoDTO Photo { get; set; } = new PhotoAlbumPhotoDTO();
    string photoAlbumStr = "";

    protected override async Task OnParametersSetAsync()
    {
        var photo = await photoAlbumPhotoRepository.GetPhoto(PhotoId);
        Photo = photo;
        photoAlbumStr = Photo.PhotoAlbum.GroupedBy + " / " + Photo.PhotoAlbum.Title;
        StateHasChanged();
    }

    private async Task UpdatePhoto()
    {
        var updatePhotoResult = await photoAlbumPhotoRepository.Update(Photo);
        navManager.NavigateTo($"photoAlbumPhotos/{@Photo.PhotoAlbum.Id}");
    }
}
