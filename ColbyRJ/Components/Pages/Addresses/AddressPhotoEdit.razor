@page "/addressPhoto/edit/{PhotoId:int}"
@rendermode InteractiveServer

@layout PostEditLayout

@inject IAddressPhotoRepository addressPhotoRepository
@inject NavigationManager navManager
@attribute [Authorize]

<div class="row">
    <div class="col"></div>
    <div class="col-8">
        <HeadingC Text="Edit Address Photo" />

        @if (Photo != null && Photo.Address != null)
        {
            <div class="row mt-2">
                <div class="col-4 pt-2 text-center">
                    Home Address
                </div>
                <div class="col">
                    <SubHeadingC Text="@addressStr" />
                </div>
            </div>
        }

        <EditForm Model="Photo" OnValidSubmit="UpdatePhoto">
            <DataAnnotationsValidator />

            <div class="row mt-2">
                <div class="col-5">
                    <div class="form-group">
                        <label><b>Caption</b></label>
                        <InputText @bind-Value="Photo.Caption" class="form-control"></InputText>
                    </div>
                    <div class="form-group">
                        <label>Order Number</label>
                        <InputNumber @bind-Value="Photo.OrderBy" class="form-control"></InputNumber>
                    </div>
                    <div class="form-group mt-2">
                        <label>Photo Date</label>
                        <InputDate @bind-Value="Photo.PhotoDate" class="form-control"></InputDate>
                    </div>
                    <div class="form-group text-center mt-3">
                        <button class="btnSave">Save</button>
                        <a href="addressPhotos/@Photo.AddressHistoryId" class="btnReturn">Return</a>
                    </div>
                </div>
                <div class="col">
                    <div class="photo-edit">
                        <img src="@Photo.PhotoUrl" class="img-fluid" />
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
    <div class="col"></div>
</div>

@code {
    [Parameter] public int PhotoId { get; set; }
    private AddressPhotoDTO Photo { get; set; } = new AddressPhotoDTO();
    string addressStr = "";

    protected override async Task OnParametersSetAsync()
    {
        var photo = await addressPhotoRepository.GetPhoto(PhotoId);
        Photo = photo;
        addressStr = Photo.Address.HomeAddress;
        StateHasChanged();
    }

    private async Task UpdatePhoto()
    {
        var updatePhotoResult = await addressPhotoRepository.Update(Photo);
        navManager.NavigateTo($"addressPhotos/{@Photo.Address.Id}");
    }
}
