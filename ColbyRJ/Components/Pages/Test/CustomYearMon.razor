<div class="row">
    <div class="col">
        <div class="form-group">
            <label>@VYearName</label>
            <div class="">
                <input class="form-select"
                       type="number"
                       value="@VYear" @oninput="OnVYearChanged" />
            </div>
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <label>@VMonStrName</label>

            <div class="">
                <select value="@VMonStr" class="form-select" @onchange="OnVMonStrChanged">
                    <option value="">-- Select Month --</option>
                    <option value="">NA</option>
                    <option value="01">Jan</option>
                    <option value="02">Feb</option>
                    <option value="03">Mar</option>
                    <option value="04">Apr</option>
                    <option value="05">May</option>
                    <option value="06">Jun</option>
                    <option value="07">Jul</option>
                    <option value="08">Aug</option>
                    <option value="09">Sep</option>
                    <option value="10">Oct</option>
                    <option value="11">Nov</option>
                    <option value="12">Dec</option>
                </select>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int VYear { get; set; }
    [Parameter] public string VMonStr { get; set; }

    [Parameter] public string VYearName { get; set; }
    [Parameter] public string VMonStrName { get; set; }

    [Parameter] public EventCallback<int> VYearChanged { get; set; }
    [Parameter] public EventCallback<string> VMonStrChanged { get; set; }

    protected override void OnInitialized()
    {
    }

    private Task OnVYearChanged(ChangeEventArgs e)
    {
        VYear = Convert.ToInt32(e.Value);
        return VYearChanged.InvokeAsync(VYear);
    }

    private Task OnVMonStrChanged(ChangeEventArgs e)
    {
        VMonStr = e.Value.ToString();
        return VMonStrChanged.InvokeAsync(VMonStr);
    }

}
